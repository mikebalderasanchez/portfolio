---
import Experience from "../components/Experience.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="About">
  <main>
    <section class="flex flex-col mb-20 w-full md:flex-row">
      <div class="w-full mb-20 md:w-1/2 md:mb-0">
        <img
          src="./images/profile.png"
          alt=""
          srcset=""
          width="570"
          height="570"
          class="mr-0 rounded-3xl aspect-auto md:mr-10 animate-image"
        />
      </div>
      <div class="w-full flex flex-col justify-center md:w-1/2 mb-20 md:mb-0">
        <span class="bg-[#ff0000] h-3 w-20 md:w-40 mb-10 animate-[entering_1s_ease-in-out]"></span>
        <h1 class="text-4xl font-bold mb-5 animate-[entering_1s_ease-in-out]">üßë‚Äçüíª About me</h1>
        <h2 class="text-xl font-medium text-neutral-700 mb-10 text-pretty animate-[entering_1.5s_ease-in-out]">
          Full Stack Software Engineer. Specialized in multiplatform application
          development
        </h2>
        <div class="flex animate-[entering_2s_ease-in-out]">
          <a
            class="text-xl font-bold bg-[#f8f8ff] text-[#ff0000] border-[#ff0000] border-2 px-5 md:px-10 py-1 rounded-lg mr-5 hover:scale-110 transition-all"
            href="">Resume</a
          >
          <a
            class="text-xl font-bold bg-[#ff0000] border-[#ff0000] border-2 text-white px-5 md:px-10 py-1 rounded-lg hover:scale-110 transition-transform"
            href="/contact">Contact</a
          >
        </div>
      </div>
    </section>
    <section class="flex flex-col md:flex-row">
      <div class="flex flex-col w-1/2">
        <span class="bg-[#ff0000] h-3 w-20 md:w-40 mb-8"></span>
        <h1 class="text-3xl font-bold mb-2">Experience</h1>
        <h2 class="text-xl font-medium text-neutral-700 mb-10 text-pretty">
          Catch up on what I've been up to recently
        </h2>
      </div>
      <div>
        <Experience
          duration="August 2024 - Ongoing"
          position="Software Engineer Intern"
          place="DHISA Distribuidora de Herramientas Industriales"
          placeLink="https://dhisa.com.mx"
        />
        <Experience
          duration="August 2022 - Ongoing"
          position="Software Engineer Student"
          place="Facultad de Informatica UAQ"
          placeLink="https://uaq.mx/informatica"
        />
      </div>
    </section>
  </main>
</Layout>
