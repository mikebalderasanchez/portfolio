---
const { duration, position, place, end, placeLink } = Astro.props;
---

<article class="flex">
  <div class="flex flex-col items-center mr-5">
    <span class="h-8 w-8 bg-[#ff0000] border-4 border-white rounded-full shadow"></span>
    {!end ? <span class="h-32 w-2 bg-[#ff0000]" /> : null}
  </div>
  <div>
    <h2 class="text-xl font-bold">{duration}</h2>
    <p>{position} at <a href={placeLink} class="text-[#ff0000] font-bold">{place}</a></p>
  </div>
</article>
